<?xml version="1.0" encoding="utf-8"?>
<ScrollView xmlns:android="http://schemas.android.com/apk/res/android"
            android:layout_width="match_parent"
            android:layout_height="match_parent"
            android:fillViewport="true">
    <RelativeLayout
            android:id="@+id/addServer"
            android:orientation="vertical"
            android:layout_width="fill_parent"
            android:layout_height="fill_parent" >
        <!--android:background="@drawable/radial_gradient"-->
        <Button android:text="@string/activated"
                android:id="@+id/activationButton"
                android:textSize="35dp"
                android:layout_centerHorizontal="true"
                android:layout_marginTop="100dp"
                android:layout_width="200dp"
                android:layout_height="200dp"
                android:background="@drawable/green_button"
                style="@style/ButtonText" />
        <TextView
                android:id="@+id/currWeatherTitle"
                android:layout_marginTop="35dp"
                android:layout_marginLeft="15dp"
                android:layout_width="fill_parent"
                android:layout_height="wrap_content"
                android:layout_below="@id/activationButton"
                android:textSize="22sp"
                android:text="@string/currWeather"/>
        <TextView
                android:id="@+id/currWeatherValue"
                android:layout_marginTop="15dp"
                android:layout_marginLeft="35dp"
                android:layout_width="fill_parent"
                android:layout_height="wrap_content"
                android:layout_below="@id/currWeatherTitle"
                android:textSize="18sp"
                android:text="@string/defaultWeather"/>
        <TextView
                android:id="@+id/currTrafficTitle"
                android:layout_marginTop="15dp"
                android:layout_marginLeft="15dp"
                android:layout_width="fill_parent"
                android:layout_height="wrap_content"
                android:layout_below="@id/currWeatherValue"
                android:textSize="22sp"
                android:text="@string/currTraffic"/>
        <TextView
                android:id="@+id/currTrafficValue"
                android:layout_marginTop="15dp"
                android:layout_marginLeft="35dp"
                android:layout_width="fill_parent"
                android:layout_height="wrap_content"
                android:layout_below="@id/currTrafficTitle"
                android:textSize="18sp"
                android:text="@string/defaultTraffic"/>
    </RelativeLayout>
</ScrollView>